{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["esnext", "dom"],
    "moduleResolution": "node",
    "types": ["@typescript-to-lua/language-extensions", "lua-types/jit"],
    "strict": true,
    "esModuleInterop": true,
    "baseUrl": "src",
    "paths": {
      "@ts/*": ["*"]
    }
  },
  "include": ["src/**/*"]
}
