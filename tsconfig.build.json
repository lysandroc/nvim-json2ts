{
  "$schema": "https://raw.githubusercontent.com/TypeScriptToLua/TypeScriptToLua/master/tsconfig-schema.json",
  "extends": "./tsconfig.lua.json",
  "exclude": ["test"],
  "compilerOptions": {
    "outDir": "lua/typescript",
    "lib": ["esnext"],
    "moduleResolution": "node",
    "types": ["node", "jest"],
    "strict": true,
    "esModuleInterop": true
  },
  "tstl": {
    "luaTarget": "JIT",
    "noImplicitSelf": true,
    "noResolvePaths": [],
    "luaPlugins": [],
    "luaLibImport": "inline"
  },
  "include": ["src"],
}

